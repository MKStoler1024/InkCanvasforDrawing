<Window
    x:Class="Ink_Canvas.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:Ink_Canvas"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="Ink Canvas - 设置"
    Width="480"
    Height="700"
    Background="{DynamicResource SettingsPageBackground}"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!--  ...existing header and footer from MainWindow BorderSettings...  -->
        <Grid Height="50" VerticalAlignment="Top">
            <ikw:SimpleStackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <ui:FontIcon
                    Width="28"
                    Height="28"
                    FontFamily="{StaticResource FluentIconFontFamily}"
                    FontSize="26"
                    Foreground="{DynamicResource SettingsPageForeground}"
                    Glyph="&#xe713;" />
                <TextBlock
                    Margin="10,-2,0,0"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SettingsPageForeground}"
                    Text="详细设置" />
            </ikw:SimpleStackPanel>
        </Grid>

        <ui:ScrollViewerEx
            Grid.Row="1"
            Margin="20"
            ManipulationBoundaryFeedback="SCManipulationBoundaryFeedback"
            PanningMode="VerticalOnly"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border
                    Height="100"
                    Margin="0,0,0,10"
                    BorderBrush="{DynamicResource SettingsPageBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <ikw:SimpleStackPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="设置更改将自动保存，部分设置需要重启软件后生效" />
                        <ikw:SimpleStackPanel Spacing="5">
                            <ikw:SimpleStackPanel
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="5">
                                <Button
                                    Width="116"
                                    Height="45"
                                    Click="BtnRestart_Click">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="0">
                                        <ui:FontIcon
                                            Margin="0,1,4,0"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="16"
                                            Foreground="{DynamicResource SettingsPageForeground}"
                                            Glyph="&#xe72c;" />
                                        <Label
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold">
                                            重启软件
                                        </Label>
                                    </ikw:SimpleStackPanel>
                                </Button>
                                <Button
                                    Width="116"
                                    Height="45"
                                    Click="BtnResetToSuggestion_Click"
                                    FontWeight="Bold">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="0">
                                        <ui:FontIcon
                                            Margin="0,0,4,0"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="18"
                                            Foreground="{DynamicResource SettingsPageForeground}"
                                            Glyph="&#xe8f7;" />
                                        <Label
                                            Margin="2,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold">
                                            重置设置
                                        </Label>
                                    </ikw:SimpleStackPanel>
                                </Button>
                                <Button
                                    Width="116"
                                    Height="45"
                                    Click="BtnExit_Click">
                                    <ikw:SimpleStackPanel
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="0">
                                        <ui:FontIcon
                                            Margin="0,0,4,0"
                                            FontFamily="{StaticResource FluentIconFontFamily}"
                                            FontSize="18"
                                            Foreground="{DynamicResource SettingsPageForeground}"
                                            Glyph="&#xe7e8;" />
                                        <Label
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold">
                                            关闭软件
                                        </Label>
                                    </ikw:SimpleStackPanel>
                                </Button>
                            </ikw:SimpleStackPanel>
                        </ikw:SimpleStackPanel>
                    </ikw:SimpleStackPanel>
                </Border>
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="启动选项" />
                    </GroupBox.Header>
                    <ikw:SimpleStackPanel Spacing="5">
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchIsAutoUpdate"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchIsAutoUpdate_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="自动检查更新" />
                        </ikw:SimpleStackPanel>

                        <ikw:SimpleStackPanel x:Name="IsAutoUpdateWithSilenceBlock" Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchIsAutoUpdateWithSilence"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchIsAutoUpdateWithSilence_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="静默更新" />
                        </ikw:SimpleStackPanel>
                        <Border
                            Padding="12"
                            BorderBrush="{DynamicResource SettingsPageBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Visibility="{Binding ElementName=IsAutoUpdateWithSilenceBlock, Path=Visibility}">
                            <ikw:SimpleStackPanel Spacing="12">
                                <TextBlock
                                    Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                                    Text="# 关闭静默更新后，已完成安装包的下载后将会弹窗询问是否进行更新，开启静默更新后将会在安装包下载完成后每隔十分钟进行如下检测：①处于静默更新时间段内 ②未处于书写模式 ③未处于画板内。若以上检测通过即会关闭软件进行自动更新。"
                                    TextWrapping="Wrap" />
                                <ikw:SimpleStackPanel x:Name="AutoUpdateTimePeriodBlock" Spacing="12">
                                    <ikw:SimpleStackPanel Spacing="12">
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource SettingsPageForeground}"
                                            Text="静默更新时间段"
                                            TextWrapping="Wrap" />
                                        <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="12">
                                            <ikw:SimpleStackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Foreground="{DynamicResource SettingsPageForeground}"
                                                    Text="起始时间"
                                                    TextWrapping="Wrap" />
                                                <ComboBox
                                                    x:Name="AutoUpdateWithSilenceStartTimeComboBox"
                                                    Width="90"
                                                    SelectionChanged="AutoUpdateWithSilenceStartTimeComboBox_SelectionChanged" />
                                            </ikw:SimpleStackPanel>
                                            <ikw:SimpleStackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Foreground="{DynamicResource SettingsPageForeground}"
                                                    Text="终止时间"
                                                    TextWrapping="Wrap" />
                                                <ComboBox
                                                    x:Name="AutoUpdateWithSilenceEndTimeComboBox"
                                                    Width="90"
                                                    SelectionChanged="AutoUpdateWithSilenceEndTimeComboBox_SelectionChanged" />
                                            </ikw:SimpleStackPanel>
                                        </ikw:SimpleStackPanel>
                                        <TextBlock
                                            Width="340"
                                            Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                                            Text="# 若终止时间小于起始时间，即将终止时间视为第二天的时间。# 若起始时间与终止时间相同，即视为全天候时间。"
                                            TextWrapping="Wrap" />
                                    </ikw:SimpleStackPanel>
                                </ikw:SimpleStackPanel>
                            </ikw:SimpleStackPanel>
                        </Border>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchRunAtStartup"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchRunAtStartup_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="开机时运行" />
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchFoldAtStartup"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchFoldAtStartup_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="开机运行后收纳到侧边栏" />
                        </ikw:SimpleStackPanel>
                    </ikw:SimpleStackPanel>
                </GroupBox>
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="画板选项" />
                    </GroupBox.Header>
                    <ikw:SimpleStackPanel Spacing="5">
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchCompressPicturesUploaded"
                                    IsOn="False"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchCompressPicturesUploaded_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="上传图片时将画质压缩至 1080P 及以下" />
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchShowCursor"
                                    IsOn="False"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchShowCursor_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="显示画笔光标" />
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="橡皮大小：" />
                            <ComboBox
                                Name="ComboBoxEraserSize"
                                Margin="5,0,0,0"
                                SelectedIndex="2"
                                SelectionChanged="ComboBoxEraserSize_SelectionChanged">
                                <ComboBoxItem Content="小" />
                                <ComboBoxItem Content="较小" />
                                <ComboBoxItem Content="中（默认）" />
                                <ComboBoxItem Content="较大" />
                                <ComboBoxItem Content="大" />
                            </ComboBox>
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchHideStrokeWhenSelecting"
                                    IsOn="False"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchHideStrokeWhenSelecting_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="退出画板模式后隐藏墨迹" />
                        </ikw:SimpleStackPanel>
                        <TextBlock
                            Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                            Text="# 开启 退出画板模式后隐藏墨迹 选项后，进入 PPT 模式时未处于批注模式时不会显示墨迹。"
                            TextWrapping="Wrap" />
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="保留双曲线渐近线：  " />
                            <ComboBox
                                Name="ComboBoxHyperbolaAsymptoteOption"
                                SelectedIndex="0"
                                SelectionChanged="ComboBoxHyperbolaAsymptoteOption_SelectionChanged">
                                <ComboBoxItem Content="是" />
                                <ComboBoxItem Content="否" />
                                <ComboBoxItem Content="每次询问" />
                            </ComboBox>
                        </ikw:SimpleStackPanel>
                        <TextBlock
                            Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                            Text="# 请注意，若不保留双曲线渐近线可能会有遇到撤回相关的 BUG 影响用。"
                            TextWrapping="Wrap" />
                    </ikw:SimpleStackPanel>
                </GroupBox>
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="手势选项" />
                    </GroupBox.Header>
                    <ikw:SimpleStackPanel Spacing="5">
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="缩放/旋转变换中心点：" />
                            <ComboBox
                                Name="ComboBoxMatrixTransformCenterPoint"
                                Width="180"
                                Margin="5,0,0,0"
                                SelectedIndex="0"
                                SelectionChanged="ComboBoxMatrixTransformCenterPoint_SelectionChanged">
                                <ComboBoxItem Content="画布中心点（默认）" />
                                <ComboBoxItem Content="全部内容的中心点" />
                                <ComboBoxItem Content="手势操作的中心点" />
                            </ComboBox>
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchAutoSwitchTwoFingerGesture"
                                    IsOn="True"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchAutoSwitchTwoFingerGesture_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="自动开关两指缩放功能" />
                        </ikw:SimpleStackPanel>
                        <TextBlock
                            Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                            Text="# 开启 自动开关两指缩放功能 后退出画板模式时自动关闭双指移动手势，进入画板模式时自动开启双指移动手势"
                            TextWrapping="Wrap" />
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchEnableTwoFingerRotationOnSelection"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchEnableTwoFingerRotation_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="允许双指旋转选中的墨迹" />
                        </ikw:SimpleStackPanel>
                        <TextBlock
                            Foreground="{DynamicResource SettingsPageAnnotationForeground}"
                            Text="# 允许选中墨迹后对墨迹进行双指或多指缩放操作（此设置不受“允许双指旋转”设置的影响）"
                            TextWrapping="Wrap" />
                    </ikw:SimpleStackPanel>
                </GroupBox>
                <GroupBox Name="GroupBoxInkRecognition">
                    <GroupBox.Header>
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="墨迹识别选项" />
                    </GroupBox.Header>
                    <ikw:SimpleStackPanel Spacing="5">
                        <TextBlock Foreground="{DynamicResource SettingsPageAnnotationForeground}" Text="# 可实现智能识别圆、三角形、矩形，并自动转换为规范图形。" />
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchEnableInkToShape"
                                    IsOn="True"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchEnableInkToShape_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="启用墨迹识别" />
                        </ikw:SimpleStackPanel>
                    </ikw:SimpleStackPanel>
                </GroupBox>
                <GroupBox Name="GroupBoxAppearanceNewUI">
                    <GroupBox.Header>
                        <TextBlock
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="{DynamicResource SettingsPageForeground}"
                            Text="外观选项" />
                    </GroupBox.Header>
                    <ikw:SimpleStackPanel Spacing="5">
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="颜色主题：  " />
                            <ComboBox
                                Name="ComboBoxTheme"
                                SelectedIndex="0"
                                SelectionChanged="ComboBoxTheme_SelectionChanged">
                                <ComboBoxItem Content="浅色主题" />
                                <ComboBoxItem Content="深色主题" />
                                <ComboBoxItem Content="跟随系统" />
                            </ComboBox>
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchEnableDisPlayFloatBarText"
                                    IsOn="False"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchEnableDisPlayFloatBarText_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="浮动工具栏显示文字注释" />
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Orientation="Horizontal">
                            <ikw:SimpleStackPanel Width="50">
                                <ui:ToggleSwitch
                                    Name="ToggleSwitchColorfulViewboxFloatingBar"
                                    IsOn="False"
                                    OffContent="关"
                                    OnContent="开"
                                    Toggled="ToggleSwitchIsColorfulViewboxFloatingBar_Toggled" />
                            </ikw:SimpleStackPanel>
                            <TextBlock
                                Margin="0,0,14,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource SettingsPageForeground}"
                                Text="浮动工具栏背景色" />
                        </ikw:SimpleStackPanel>

                        <ikw:SimpleStackPanel Margin="0,15,0,0" Spacing="10">
                            <StackPanel Orientation="Horizontal">
                                <Slider
                                    x:Name="SliderFloatingBarBottomMargin"
                                    Width="330"
                                    ui:ControlHelper.Header="浮动工具栏底部边距 (像素)"
                                    IsSnapToTickEnabled="True"
                                    Maximum="200"
                                    Minimum="0"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderFloatingBarBottomMargin_ValueChanged"
                                    Value="100" />
                                <TextBlock
                                    Width="35"
                                    Margin="10,0,0,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="{Binding Value, ElementName=SliderFloatingBarBottomMargin, StringFormat={}{0:F0}}" />
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="20,4"
                                    Click="BtnSetFloatingBarMargin_Click"
                                    Content="重置为 100"
                                    Tag="100" />
                            </StackPanel>
                        </ikw:SimpleStackPanel>
                        <ikw:SimpleStackPanel Spacing="10">
                            <!--  Floating Bar Scale Slider  -->
                            <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                                <Slider
                                    x:Name="SliderFloatingBarScale"
                                    Width="330"
                                    ui:ControlHelper.Header="浮动工具栏 UI 缩放 (%)"
                                    IsSnapToTickEnabled="True"
                                    Maximum="150"
                                    Minimum="50"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderFloatingBarScale_ValueChanged"
                                    Value="100" />
                                <TextBlock
                                    Width="35"
                                    Margin="10,0,0,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="{Binding Value, ElementName=SliderFloatingBarScale, StringFormat={}{0:F0}}" />
                            </StackPanel>
                            <!--  Floating Bar Quick Buttons  -->
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetFloatingBarScale_Click"
                                    Content="80%"
                                    Tag="80" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetFloatingBarScale_Click"
                                    Content="90%"
                                    Tag="90" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetFloatingBarScale_Click"
                                    Content="100%"
                                    Tag="100" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetFloatingBarScale_Click"
                                    Content="110%"
                                    Tag="110" />
                                <Button
                                    Padding="15,4"
                                    Click="BtnSetFloatingBarScale_Click"
                                    Content="125%"
                                    Tag="125" />
                            </StackPanel>
                        </ikw:SimpleStackPanel>

                        <ikw:SimpleStackPanel Margin="0,15,0,0" Spacing="10">
                            <!--  Blackboard Scale Slider  -->
                            <StackPanel Orientation="Horizontal">
                                <Slider
                                    x:Name="SliderBlackboardScale"
                                    Width="330"
                                    ui:ControlHelper.Header="画板 UI 缩放 (%)"
                                    IsSnapToTickEnabled="True"
                                    Maximum="150"
                                    Minimum="50"
                                    TickFrequency="1"
                                    TickPlacement="BottomRight"
                                    ValueChanged="SliderBlackboardScale_ValueChanged"
                                    Value="100" />
                                <TextBlock
                                    Width="35"
                                    Margin="10,0,0,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    Text="{Binding Value, ElementName=SliderBlackboardScale, StringFormat={}{0:F0}}" />
                            </StackPanel>
                            <!--  Blackboard Quick Buttons  -->
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetBlackboardScale_Click"
                                    Content="80%"
                                    Tag="80" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetBlackboardScale_Click"
                                    Content="90%"
                                    Tag="90" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetBlackboardScale_Click"
                                    Content="100%"
                                    Tag="100" />
                                <Button
                                    Margin="0,0,5,0"
                                    Padding="15,4"
                                    Click="BtnSetBlackboardScale_Click"
                                    Content="110%"
                                    Tag="110" />
                                <Button
